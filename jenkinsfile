pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo "$HOSTNAME"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo "$HOSTNAME"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo "$HOSTNAME"
            }
        }
    }
}
