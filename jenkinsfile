pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                
            sh '''
            #!/bin/bash
            echo "hello world"
            sleep 1m
         '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
               sh '''
            #!/bin/bash
            echo "hello world"
            sleep 2m
         '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh '''
            #!/bin/bash
            echo "hello world"
            sleep 5m
         '''
            }
        }
    }
}
